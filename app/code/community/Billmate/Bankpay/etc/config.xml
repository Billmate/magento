<?xml version="1.0"?>
<config>
    <modules>
        <Billmate_Bankpay>
            <version>1.0.0</version>
        </Billmate_Bankpay>
    </modules>
    <global>
        <!--<events>
			<sales_order_save_after>
				<observers>
					<sampleobserver_sales_order_save_after_observer>
						<type>singleton</type>
						<class>billmateinvoice/observer</class>
						<method>activate</method>
					</sampleobserver_sales_order_save_after_observer>
				</observers>
			</sales_order_save_after>
		</events>
		-->
        <models>
            <billmatebankpay>
                <class>Billmate_Bankpay_Model</class>
            </billmatebankpay>
        </models>
        <blocks>
            <billmatebankpay>
                <class>Billmate_Bankpay_Block</class>
            </billmatebankpay>
        </blocks>
        <helpers>
            <billmatebankpay>
                <class>Billmate_Bankpay_Helper</class>
            </billmatebankpay>
        </helpers>
        <sales>
            <order>
                <statuses>
                    <communication_error translate="label">
                        <label><![CDATA[Communication Error]]></label>
                    </communication_error>
                    <states>
                        <billmatebankpay>
                            <label>Billmate Bankpay</label>
                            <statuses>
                                <communication_error default="10" />
                            </statuses>
                            <visible_on_front/>
                        </billmatebankpay>
                    </states>
                </statuses>
            </order>
        </sales>
    </global>
    <default>
        <payment>
            <billmatebankpay>
                <model>billmatebankpay/billmatebankpay</model>
                <countries>SE,DE,NL</countries>
                <title>Billmate Bankpay</title>
				<bank_error_page>home</bank_error_page>
                <eid>7270</eid>
                <secret>606250886062</secret>
                <active>0</active>
                <min_amount>0</min_amount>
                <max_amount>99999</max_amount>
               <order_status>pending</order_status>
            </billmatebankpay>
        </payment>
        <payment_action>authorize</payment_action>
    </default>
    <adminhtml>
        <translate>
            <modules>
                <Billmate_Bankpay>
                    <files>
                        <default>Billmate_Bankpay.csv</default>
                    </files>
                </Billmate_Bankpay>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <translate>
            <modules>
                <Billmate_Bankpay>
                    <files>
                        <default>Billmate_Bankpay.csv</default>
                    </files>
                </Billmate_Bankpay>
            </modules>
        </translate>
        <layout>
            <updates>
                <Billmate_Bankpay>
                    <file>billmatebankpay.xml</file>
                </Billmate_Bankpay>
            </updates>
        </layout>
        <routers>
            <billmatebankpay>
                <use>standard</use>
                <args>
                    <module>Billmate_Bankpay</module>
                    <frontName>bankpay</frontName>
                </args>
            </billmatebankpay>
        </routers>
    </frontend>
</config>